<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Change this to your desired color -->
            <size android:width="20dp" android:height="20dp"/> <!-- Size of the checked box -->
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Change this to your desired color -->
            <stroke android:width="2dp" android:color="#FF0000"/> <!-- Border color and width -->
            <size android:width="20dp" android:height="20dp"/> <!-- Size of the unchecked box -->
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
